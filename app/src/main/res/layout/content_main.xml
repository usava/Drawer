<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.svyatoslav.drawable.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <TextView
        android:id="@+id/tv_main_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="@dimen/main_marginTop"
        android:gravity="top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:hint="empty"
        android:textSize="@dimen/main_textSize" />

    <TextView
        android:id="@+id/tv_main_surname"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_main_name"
        android:layout_marginTop="@dimen/main_marginTop"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:hint="empty"
        android:textSize="@dimen/main_textSize" />

    <TextView
        android:id="@+id/tv_main_phone"
        android:gravity="top"
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/tv_main_surname"
        android:layout_marginTop="@dimen/main_marginTop"
        android:hint="empty"
        android:textSize="@dimen/main_textSize" />

    <ImageView
        android:id="@+id/iv_main_fromCamera"
        android:layout_margin="10dp"
        android:layout_marginLeft="20dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_below="@+id/tv_main_phone"/>

    <ImageView
        android:id="@+id/iv_main_fromGallery"
        android:layout_margin="10dp"
        android:layout_width="150dp"
        android:layout_height="100dp"
        android:layout_toRightOf="@+id/iv_main_fromCamera"
        android:layout_below="@+id/tv_main_phone"/>

    <TextView
        android:id="@+id/tv_main_locationText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/iv_main_fromGallery"/>

    <com.facebook.login.widget.LoginButton
        android:id="@+id/btn_main_loginButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="100dp"
        android:layout_marginBottom="30dp"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>
